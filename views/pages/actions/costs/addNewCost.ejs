<!DOCTYPE html>
<html lang="pl">
<head>
    <%- include("../../../partials/head"); %>
    <title>Koszty</title>
</head>
<body>
    <%- include("../../../partials/header"); %>

    <main>
        <h1>Witamy na stronie dodawania kosztów</h1>

        <form method="post" action="/costs/add-cost">
            <label for="name">Podaj nazwę</label>
            <input type="text" id="name" name="name" required>
            <label for="description">Podaj opis</label>
            <textarea id="description" name="description"></textarea>
            <label for="cost">Podaj koszt</label>
            <input type="number" id="cost" name="cost" required>
            <label for="date">Podaj datę</label>
            <input type="date" id="date" name="date" value="<%= new Date().toISOString().split("T")[0] %>" required>
            <select name="category">
                <% categories.forEach((category) => { %>
                    <option value="<%= category %>" <%= category === "Nieplanowane" ? "selected" : "" %>><%= category %></option>
                <% }) %>
            </select>
            <input type="submit" value="Zapisz">
        </form>

    </main>

    <%- include("../../../partials/footer"); %>
</body>
</html>