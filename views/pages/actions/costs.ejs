<!DOCTYPE html>
<html lang="pl">
<head>
    <%- include("../../partials/head"); %>
    <title>Koszty</title>
</head>
<body>
    <%- include("../../partials/header"); %>

    <main>
        <h1>Witamy na stronie kosztów</h1>
        <% if (costs.length > 0) {
            costs.forEach((cost) => { %>
                <h3><%= cost.name %></h3>
                <h4><%= cost.description %></h4>
                <p><%= cost.cost %></p>
            <% });
        } else { %>
            <p>Brak wprowadzonych kosztów</p>
        <% } %>
        <a href="/costs/add-cost">Dodaj nowy koszt</a>
    </main>

    <%- include("../../partials/footer"); %>
</body>
</html>